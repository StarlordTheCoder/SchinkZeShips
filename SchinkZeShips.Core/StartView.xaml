<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:core="clr-namespace:SchinkZeShips.Core;assembly=SchinkZeShips.Core"
             x:Class="SchinkZeShips.Core.StartView"
             IsBusy="{Binding IsBusy}"
             Title="SchinkZeShips">
	<ContentPage.BindingContext>
		<core:StartViewModel />
	</ContentPage.BindingContext>

	<Grid>
		<StackLayout Spacing="20" Padding="20"
					 VerticalOptions="Center"
					 IsEnabled="{Binding IsNotBusy}">
			<Label Text="{Binding MainLabelText}"
			       HorizontalOptions="Center"
			       AutomationId="GameCountLabel" />
			<Button Text="Spiel erstellen"
			        HorizontalOptions="Center"
			        VerticalOptions="CenterAndExpand"
			        AutomationId="CreateGameButton"
					IsEnabled="{Binding IsNotBusy}" />
			<Button Text="Spiel Suchen"
			        HorizontalOptions="Center"
			        VerticalOptions="CenterAndExpand"
			        AutomationId="SearchGameButton"
			        IsEnabled="{Binding IsNotBusy}" />
		</StackLayout>

		<ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" VerticalOptions="Center" HorizontalOptions="Center"/>
	</Grid>
</ContentPage>